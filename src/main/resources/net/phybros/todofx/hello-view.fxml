<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.phybros.todofx.HelloController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <TextField fx:id="taskEntry" onAction="#onTaskEntrySubmit" promptText="New Task (Cmd-N)" />
    <ListView fx:id="taskList" editable="true" onEditCommit="#onCommitEdit" VBox.vgrow="ALWAYS" />
</VBox>
